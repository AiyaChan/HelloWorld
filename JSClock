$(document).ready(function() {
   var d = new Date();
   var hours = d.getHours();
   var minutes = d.getMinutes();
   var element = document.getElementsByClassName('hour' + hours)[0];
   element.className = element.className + ' glow';
   var element2 = document.getElementsByClassName('minutes' + minutes)[0];
   element2.className = element2.className + ' glow';
});
